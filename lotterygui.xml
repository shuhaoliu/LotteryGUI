  <property name="project.jdk.home" value="${jdk.home.9.0}"/>
  <property name="project.jdk.bin" value="${jdk.bin.9.0}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.9.0"/>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <fileset dir="${javac2.home}">
      <include name="javac2.jar"/>
      <include name="jdom.jar"/>
      <include name="asm-all*.jar"/>
      <include name="jgoodies-forms.jar"/>
    </fileset>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module LotteryGUI -->
  
  <dirname property="module.lotterygui.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.lotterygui" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.lotterygui" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.lotterygui" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.lotterygui" value="-encoding UTF-8 -source 9 -target 9 ${compiler.args}"/>
  
  <property name="lotterygui.output.dir" value="${module.lotterygui.basedir}/out/production/LotteryGUI"/>
  <property name="lotterygui.testoutput.dir" value="${module.lotterygui.basedir}/out/test/LotteryGUI"/>
  
  <path id="lotterygui.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="lotterygui.module.production.classpath">
    <path refid="${module.jdk.classpath.lotterygui}"/>
  </path>
  
  <path id="lotterygui.runtime.production.module.classpath">
    <pathelement location="${lotterygui.output.dir}"/>
  </path>
  
  <path id="lotterygui.module.classpath">
    <path refid="${module.jdk.classpath.lotterygui}"/>
    <pathelement location="${lotterygui.output.dir}"/>
  </path>
  
  <path id="lotterygui.runtime.module.classpath">
    <pathelement location="${lotterygui.testoutput.dir}"/>
    <pathelement location="${lotterygui.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.lotterygui">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.lotterygui">
    <patternset refid="excluded.from.module.lotterygui"/>
  </patternset>
  
  <path id="lotterygui.module.sourcepath">
    <dirset dir="${module.lotterygui.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.lotterygui" depends="compile.module.lotterygui.production,compile.module.lotterygui.tests" description="Compile module LotteryGUI"/>
  
  <target name="compile.module.lotterygui.production" depends="register.custom.compilers" description="Compile module LotteryGUI; production classes">
    <mkdir dir="${lotterygui.output.dir}"/>
    <javac2 destdir="${lotterygui.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.lotterygui}/javac">
      <compilerarg line="${compiler.args.lotterygui}"/>
      <bootclasspath refid="lotterygui.module.bootclasspath"/>
      <classpath refid="lotterygui.module.production.classpath"/>
      <src refid="lotterygui.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.lotterygui"/>
    </javac2>
    
    <copy todir="${lotterygui.output.dir}">
      <fileset dir="${module.lotterygui.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.lotterygui.tests" depends="register.custom.compilers,compile.module.lotterygui.production" description="compile module LotteryGUI; test classes" unless="skip.tests"/>
  
  <target name="clean.module.lotterygui" description="cleanup module">
    <delete dir="${lotterygui.output.dir}"/>
    <delete dir="${lotterygui.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.lotterygui, clean.artifact.lotteryapp" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.lotterygui" description="build all modules"/>
  
  <target name="init.artifacts">
    <property name="artifacts.temp.dir" value="${basedir}/__artifacts_temp"/>
    <property name="artifact.output.lotteryapp" value="${basedir}/out/artifacts/LotteryApp"/>
    <mkdir dir="${artifacts.temp.dir}"/>
    <property name="artifact.temp.output.JavaFXApp" value="${artifacts.temp.dir}/JavaFXApp.jar"/>
    <taskdef resource="com/sun/javafx/tools/ant/antlib.xml" uri="javafx:com.sun.javafx.tools.ant" classpath="${jdk.home.9.0}/lib/ant-javafx.jar"/>
  </target>
  
  <target name="clean.artifact.lotteryapp" description="clean LotteryApp artifact output">
    <delete dir="${artifact.output.lotteryapp}"/>
  </target>
  
  <target name="artifact.lotteryapp" depends="init.artifacts, compile.module.lotterygui" description="Build &#39;LotteryApp&#39; artifact" xmlns:fx="javafx:com.sun.javafx.tools.ant">
    <mkdir dir="${artifact.output.lotteryapp}"/>
    <copy todir="${artifact.temp.output.JavaFXApp}">
      <fileset dir="${lotterygui.output.dir}"/>
    </copy>
    <fx:fileset id="all_but_JavaFXApp" dir="${artifact.temp.output.JavaFXApp}" includes="**/*.jar">
      <exclude name="JavaFXApp.jar"/>
    </fx:fileset>
    <fx:fileset id="all_JavaFXApp" dir="${artifact.temp.output.JavaFXApp}" includes="**/*.jar"/>
    <fx:application id="JavaFXApp_id" name="LotteryApp" mainClass="lottery.Main"/>
    <fx:jar destfile="${artifact.temp.output.JavaFXApp}/JavaFXApp.jar">
      <fx:application refid="JavaFXApp_id"/>
      <fileset dir="${artifact.temp.output.JavaFXApp}" excludes="**/*.jar"/>
      <fx:resources>
        <fx:fileset refid="all_but_JavaFXApp"/>
      </fx:resources>
      <manifest>
        <attribute name="Implementation-Title" value=""/>
        <attribute name="Implementation-Version" value=""/>
        <attribute name="Implementation-Vendor" value=""/>
      </manifest>
    </fx:jar>
    <fx:deploy width="600" height="400" updatemode="background" outdir="${artifact.temp.output.JavaFXApp}/deploy" outfile="JavaFXApp">
      <fx:application refid="JavaFXApp_id"/>
      <fx:resources>
        <fx:fileset refid="all_JavaFXApp"/>
      </fx:resources>
    </fx:deploy>
    <copy todir="${artifact.output.lotteryapp}">
      <fileset dir="${artifact.temp.output.JavaFXApp}/deploy"/>
    </copy>
    <delete includeemptydirs="true">
      <fileset dir="${artifact.temp.output.JavaFXApp}"/>
    </delete>
  </target>
  
  <target name="build.all.artifacts" depends="artifact.lotteryapp" description="Build all artifacts">
    
    <!-- Delete temporary files -->
    <delete dir="${artifacts.temp.dir}"/>
  </target>
  
  <target name="all" depends="build.modules, build.all.artifacts" description="build all"/>
</project>